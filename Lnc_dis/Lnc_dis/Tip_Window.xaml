<Window x:Class="Lnc_dis.Tip_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lnc_dis"
        mc:Ignorable="d"
        Title="Tip_Window" Height="120" Width="300">
    <Grid>
        <Label x:Name="label" Content="       重新开始预测将耗费大量时间（5小时左右），&#xD;&#xA;此间将无法进行任何操作，是否重新开始预测？" HorizontalAlignment="Left" VerticalAlignment="Top" Height="42" Width="292"/>
        <Button x:Name="ok_button" Content="开始" HorizontalAlignment="Left" Margin="36,47,0,0" VerticalAlignment="Top" Width="75" Click="ok_button_Click"/>
        <Button x:Name="cancel_button" Content="取消" HorizontalAlignment="Left" Margin="162,47,0,0" VerticalAlignment="Top" Width="75" Click="cancel_button_Click"/>

    </Grid>
</Window>
